<button class="btn-primary w-50 text-center" id="createPost">Create Post</button>

{{#if posts.length}}
    {{#each posts as |post|}}
    <div class="card w-75 my-3">
        <div class="card-title d-flex justify-content-between px-2 h4">
            <a href="/post/{{id}}">{{post.title}}</a>
            <a href="/post/edit/{{id}}">Edit</a>
        </div>
        <div class="card-body">{{content}}</div>
    </div>
    {{/each}}
{{else}}
    <h5>You do not currently have any posts.</h5>
{{/if}}
<script src="./js/dashboard.js"></script>