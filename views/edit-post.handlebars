<h4>Title</h4>
<textarea class="w-50 mb-3" name="title" id="title" cols="1" rows="1">{{post.title}}</textarea>
<h4>Post</h4>
<textarea class="w-50 mb-5" name="content" id="content" cols="30" rows="20">{{post.content}}</textarea>
<div class="btn-group">
    {{#if newPost}}
    <button class="btn btn-success mx-3" id="createPost">Create Post</button>
    <button class="btn btn-danger mx-3" id="cancelPost">Cancel</button>
    {{else}}
    <button class="btn btn-success mx-3" id="updatePost">Update Post</button>
    <button class="btn btn-danger mx-3" id="deletePost">Delete Post</button>
    {{/if}}
</div>
{{#if newPost}}
<script src="../js/editPost.js"></script>
{{else}}
<script src="../../js/editPost.js"></script>
{{/if}}
